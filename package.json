{
  "name": "procertify-studio",
  "private": true,
  "version": "1.3.3",
  "description": "Profesyonel Sertifika Tasarım ve Toplu Üretim Aracı",
  "main": "main.js",
  "homepage": "./",
  "author": {
    "name": "ProCertify Team",
    "email": "info@procertify.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/szgnemin1/ProCertify.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.procertify.studio",
    "productName": "ProCertify Studio",
    "copyright": "Copyright © 2024 ProCertify",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ProCertify Studio"
    }
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "lucide-react": "^0.344.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "electron": "^29.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}